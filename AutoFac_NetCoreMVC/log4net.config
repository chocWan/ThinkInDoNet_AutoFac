<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!-- This section contains the log4net configuration settings -->
  <log4net>

    <appender name="DebugAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger %ndc - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="DEBUG" />
      </filter>
    </appender>
    
    <appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="LogFile\\LogError\\" />
      <param name="AppendToFile" value="true" />
      <param name="MaxSizeRollBackups" value="100" />
      <param name="MaxFileSize" value="10240" />
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value="yyyyMMdd&quot;.txt&quot;" />
      <param name="RollingStyle" value="Date" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="异常时间：%date %newline 异常级别：%-5level%newline 异常位置：%logger%newline 异常参数：%ndc%newline 异常内容：%message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="levelMin"  value="ERROR" />
        <param name="levelMax"  value="ERROR" />
      </filter>
    </appender>

    <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="LogFile\\LogInfo\\" />
      <param name="AppendToFile" value="true" />
      <param name="MaxFileSize" value="10240" />
      <param name="MaxSizeRollBackups" value="100" />
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value="yyyyMMdd&quot;.txt&quot;" />
      <param name="RollingStyle" value="Date" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="日志时间：%date %newline 日志级别：%-5level%newline 日志位置：%logger%newline 日志参数：%ndc%newline 日志内容：%message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="levelMin"  value="INFO" />
        <param name="levelMax"  value="INFO" />
      </filter>
    </appender>

    <appender name="ADONetAppender_Sqlite" type="log4net.Appender.ADONetAppender">
      <bufferSize value="0" />
      <!-- SQL数据源 -->
      <connectionType value="Microsoft.Data.Sqlite.SqliteConnection, Microsoft.Data.Sqlite" />
      <!-- SQL连接字符串-->
      <connectionString value="Data Source=D:\\MyCode\\ThinkInDoNet\\AutoFactory\\AutoFac_NetCoreMVC\\raeclass.db;"/>
      <commandText value="INSERT INTO [dbo].[LogRequest]([FName]
,[FRequestUrl],[FRequestType],[FParameters],[FMessage],[FDetails],[FIPAddress],[FRequestUser],[FRequestTime]) VALUES (@FName,@FRequestUrl,@FRequestType,@FParameters,@FMessage,@FDetails,@FIPAddress,@FRequestUser,@FRequestTime)"/>

      <parameter>
        <parameterName value="@FName"/>
        <dbType value="String"/>
        <size value="50"/>
        <layout type="AutoFac_NetCoreMVC.Helper.CustomLayout, AutoFac_NetCoreMVC" >
          <param name="ConversionPattern" value="%property{FName}"/>
        </layout>
      </parameter>

      <parameter>
        <parameterName value="@FRequestUrl"/>
        <dbType value="String"/>
        <size value="500"/>
        <layout type="AutoFac_NetCoreMVC.Helper.CustomLayout, AutoFac_NetCoreMVC" >
          <param name="ConversionPattern" value="%property{FRequestUrl}"/>
        </layout>
      </parameter>

      <parameter>
        <parameterName value="@FRequestType"/>
        <dbType value="String"/>
        <size value="5"/>
        <layout type="AutoFac_NetCoreMVC.Helper.CustomLayout, AutoFac_NetCoreMVC" >
          <param name="ConversionPattern" value="%property{FRequestType}"/>
        </layout>
      </parameter>

      <parameter>
        <parameterName value="@FParameters"/>
        <dbType value="String"/>
        <size value="500"/>
        <layout type="AutoFac_NetCoreMVC.Helper.CustomLayout, AutoFac_NetCoreMVC" >
          <param name="ConversionPattern" value="%property{FParameters}"/>
        </layout>
      </parameter>

      <parameter>
        <parameterName value="@FMessage"/>
        <dbType value="String"/>
        <size value="500"/>
        <layout type="AutoFac_NetCoreMVC.Helper.CustomLayout, AutoFac_NetCoreMVC" >
          <param name="ConversionPattern" value="%property{FMessage}"/>
        </layout>
      </parameter>

      <parameter>
        <parameterName value="@FDetails"/>
        <dbType value="String"/>
        <size value="4000"/>
        <layout type="AutoFac_NetCoreMVC.Helper.CustomLayout, AutoFac_NetCoreMVC" >
          <param name="ConversionPattern" value="%property{FDetails}"/>
        </layout>
      </parameter>

      <parameter>
        <parameterName value="@FIPAddress"/>
        <dbType value="String"/>
        <size value="20"/>
        <layout type="AutoFac_NetCoreMVC.Helper.CustomLayout, AutoFac_NetCoreMVC" >
          <param name="ConversionPattern" value="%property{FIPAddress}"/>
        </layout>
      </parameter>

      <parameter>
        <parameterName value="@FRequestUser"/>
        <dbType value="String"/>
        <size value="100"/>
        <layout type="AutoFac_NetCoreMVC.Helper.CustomLayout, AutoFac_NetCoreMVC" >
          <param name="ConversionPattern" value="%property{FRequestUser}"/>
        </layout>
      </parameter>

      <parameter>
        <parameterName value="@FRequestTime"/>
        <dbType value="DateTime"/>
        <layout type="AutoFac_NetCoreMVC.Helper.CustomLayout, AutoFac_NetCoreMVC" >
          <param name="ConversionPattern" value="%property{FRequestTime}"/>
        </layout>
      </parameter>

    </appender>

    <!-- Setup the root category, add the appenders and set the default level -->
    <root>
      <level value="ALL" />
      <!--<appender-ref ref="DebugAppender" />
      <appender-ref ref="ErrorAppender" />
      <appender-ref ref="InfoAppender" />-->
      <appender-ref ref="ADONetAppender_Sqlite" />
    </root>
    
    <!--记录的格式。一般用log4net.Layout.PatternLayout布局-->
    <!--<param name="ConversionPattern" value="记录时间：%date 线程ID:[%thread] 日志级别：%-5level 记录类：%logger     操作者ID：%property{Operator} 操作类型：%property{Action}%n             当前机器名:%property%n当前机器名及登录用户：%username %n               记录位置：%location%n 消息描述：%property{Message}%n                    异常：%exception%n 消息：%message%newline%n%n" />-->

  </log4net>
</configuration>